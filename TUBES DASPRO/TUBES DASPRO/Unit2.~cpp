//---------------------------------------------------------------------------

void __fastcall TForm2::Button8Click(TObject *Sender)   //Menampilkan uang kembalian
{
int totalbayar=StrToInt(Edit2->Text);        //Edit2 menampilkan total pembayaran
int bayar=StrToInt(Edit3->Text);             //Edit3 untuk menginputkan uang yang akan dibayarkan
uang_bayar[n]=bayar;
total_pembayaran[n]=totalbayar;
n++;

                c=c+totalbayar;
                Edit36->Text = StrToInt (c);
                Form5->Edit4->Text = StrToInt (c);

        if(bayar<totalbayar)
        {
        ShowMessage("Uang anda tidak cukup");
        Edit3->Clear();
        Edit3->SetFocus();
        }
        else
        {
                for (int i=0; i<n; i++)
                {
                uang_kembalian[i]=uang_bayar[i]-total_pembayaran[i];

                Edit4->Text=uang_kembalian[i];
                }
        }

}
