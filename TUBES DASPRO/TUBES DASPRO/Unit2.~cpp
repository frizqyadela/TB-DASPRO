void __fastcall TForm2::Button9Click(TObject *Sender)
{

ListBox3->Items->Add("");
ListBox3->Items->Add("             STRUK PEMBAYARAN");
ListBox3->Items->Add("                    Defa Crochet");
ListBox3->Items->Add("               Padang, Indonesia");
ListBox3->Items->Add("======================================");
